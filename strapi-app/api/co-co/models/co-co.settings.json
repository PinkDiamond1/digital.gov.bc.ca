{
  "kind": "collectionType",
  "collectionName": "co_cos",
  "info": {
    "name": "CoCo",
    "description": "This is the Common Component Collection Type."
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": false
  },
  "attributes": {
    "Name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "Description": {
      "type": "richtext",
      "required": true
    },
    "ProjectStatus": {
      "type": "component",
      "repeatable": false,
      "component": "co-co.co-co-development-status"
    },
    "Tags": {
      "collection": "tag",
      "via": "co_cos",
      "dominant": true
    },
    "TeamNameAndMinistry": {
      "type": "string",
      "required": true,
      "unique": false
    },
    "NumberOfUsers": {
      "type": "integer"
    },
    "OnboardingTime": {
      "type": "enumeration",
      "enum": [
        "hours",
        "days",
        "weeks",
        "months"
      ]
    },
    "SupportSchedule": {
      "type": "enumeration",
      "enum": [
        "Anytime",
        "MonFriday"
      ]
    },
    "CoverImage": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": true
    },
    "WhyShouldIUseThis": {
      "type": "component",
      "repeatable": true,
      "component": "co-co.why-should-iu-se-this",
      "required": true,
      "max": 3,
      "min": 3
    },
    "ComponentCreationDate": {
      "type": "date",
      "required": true
    },
    "AdditionalTechnicalInfo": {
      "type": "component",
      "repeatable": true,
      "component": "co-co.additional-technical-info",
      "min": 1,
      "required": true
    },
    "RequirementsAndRestrictions": {
      "type": "component",
      "repeatable": true,
      "component": "co-co.requirements-and-restrictions",
      "required": true,
      "min": 1
    },
    "GetStartedURL": {
      "type": "string",
      "required": true
    },
    "SupportContact": {
      "type": "component",
      "repeatable": false,
      "component": "co-co.support-contact",
      "required": true
    },
    "uid": {
      "type": "uid",
      "targetField": "Name",
      "required": true
    },
    "CoCoWebsite": {
      "type": "string",
      "required": true
    },
    "ministries": {
      "unique": true,
      "collection": "ministry",
      "via": "co_cos",
      "dominant": true
    },
    "GetStartedSteps": {
      "type": "richtext"
    },
    "CostStructure": {
      "type": "component",
      "repeatable": false,
      "component": "co-co.cost-details",
      "required": true
    },
    "ServiceLevelSupport": {
      "type": "richtext",
      "required": true
    }
  }
}
